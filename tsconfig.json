{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2020"],                                     
    "module": "NodeNext", 
    "rootDir": "src", 
    "moduleResolution": "NodeNext", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}